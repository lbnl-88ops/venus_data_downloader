[Unit]
Description=VENUS Data Downloader Service
After=network.target

[Service]
User=rehak
Group=ecris
WorkingDirectory=/opt/venus_data_downloader
ExecStart=/opt/venus_data_downloader/.venv/bin/gunicorn -w 4 --b 0.0.0.0:4000 'app:create_app()'
Restart=on-failure
RestartSec=5
KillMode=mixed
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target